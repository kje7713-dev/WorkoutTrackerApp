default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # --- App Store Connect API key ---
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_filepath: "fastlane/AuthKey.p8",
      duration: 1200, # 20 min token
      in_house: false
    )

    # --- CI keychain (prevents prompts) ---
    is_ci = !ENV["CI"].to_s.empty?
    keychain_name = "fastlane_tmp_keychain"
    keychain_password = ENV["MATCH_PASSWORD"] || "temp_password"

    if is_ci
      sh("security create-keychain -p '#{keychain_password}' #{keychain_name}")
      sh("security default-keychain -s #{keychain_name}")
      sh("security unlock-keychain -p '#{keychain_password}' #{keychain_name}")
      sh("security set-keychain-settings -lut 21600 #{keychain_name}")
    end

    # --- Match (pull signing from ios-certificates repo) ---
    match(
      type: "appstore",
      readonly: is_ci, # readonly on CI unless you want to create new certs there
      api_key: api_key,
      keychain_name: keychain_name,
      keychain_password: keychain_password
    )

    # --- Resolve workspace/project (ONLY ONE may be passed to build_app) ---
    workspace = ENV["IOS_WORKSPACE"].to_s.strip
    project   = ENV["IOS_PROJECT"].to_s.strip

    # If neither was set by env, try to find one
    if workspace.empty? && project.empty?
      found_workspace = Dir["**/*.xcworkspace"].first
      found_project   = Dir["**/*.xcodeproj"].first

      workspace = found_workspace.to_s
      project   = found_project.to_s
    end

    UI.message("Using workspace: #{workspace}") unless workspace.empty?
    UI.message("Using project: #{project}") unless project.empty?

    if workspace.empty? && project.empty?
      UI.user_error!(
        "No .xcworkspace or .xcodeproj found anywhere in repo. " \
        "Make sure xcodegen ran and created one."
      )
    end

    build_opts = {
      scheme: ENV["IOS_SCHEME"],
      export_method: "app-store"
    }

    # pass ONLY one:
    if !workspace.empty?
      build_opts[:workspace] = workspace
    else
      build_opts[:project] = project
    end

    # --- Build IPA ---
    build_app(**build_opts)

    # --- Upload to TestFlight ---
    upload_to_testflight(
      api_key: api_key
    )
  end
end