default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_filepath: "fastlane/AuthKey.p8"
    )

    match(
      type: "appstore",
      readonly: false, # allow creation until repo has certs
      git_url: "https://#{ENV['MATCH_GIT_TOKEN']}@github.com/kje7713-dev/ios-certificates.git",
      app_identifier: [ENV["APP_IDENTIFIER"]].compact,
      username: ENV["APPLE_ID"],
      team_id: ENV["APPLE_TEAM_ID"]
    )

    build_app(
      scheme: ENV["IOS_SCHEME"],
      export_method: "app-store"
    )

    upload_to_testflight(api_key: api_key)
  end
end