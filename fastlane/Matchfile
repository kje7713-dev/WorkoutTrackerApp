storage_mode("git")
git_url("https://github.com/kje7713-dev/ios-certificates.git")
type("appstore")

# your bundle id(s)
app_identifier([ENV["APP_IDENTIFIER"]].compact)

username(ENV["APPLE_ID"])
team_id(ENV["APPLE_TEAM_ID"])

# In CI we usually want automatic creation if missing
readonly(false)

# Optional: speed/behavior tweaks
shallow_clone(false)
clone_branch_directly(false)
git_branch("master")