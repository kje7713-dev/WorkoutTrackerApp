# fastlane/Matchfile

# Store certs/profiles in your GitHub repo
storage_mode("git")

# IMPORTANT:
# This must be a real URL string at runtime.
# Using ENV[] here ensures Fastlane substitutes the token correctly,
# instead of leaving ${MATCH_GIT_TOKEN} literally in the URL.
git_url("https://#{ENV['MATCH_GIT_TOKEN']}@github.com/kje7713-dev/ios-certificates.git")

# App Store distribution signing
type("appstore")

# Your app bundle id (same value you use elsewhere)
app_identifier([ENV["APP_IDENTIFIER"]])

# Apple developer account email
username(ENV["APPLE_ID"])

# Team ID
team_id(ENV["APPLE_TEAM_ID"])

# Branch in the cert repo
git_branch("master")

# Let CI create/update if needed (Fastfile can override readonly anyway)
readonly(false)

# Optional but nice to keep repo from growing weirdness
shallow_clone(false)
clone_branch_directly(false)

# Less noise
verbose(false)