git_url(ENV["MATCH_GIT_URL"])
storage_mode("git")

type("appstore")
app_identifier(["com.kje7713.WorkoutTrackerApp"])
username(ENV["APPLE_ID"])
team_id(ENV["APPLE_TEAM_ID"])
readonly(true)

# Use token for private repo access
git_basic_authorization(
  Base64.strict_encode64("#{ENV['MATCH_GIT_TOKEN']}:x-oauth-basic")
)